<!-- Draws the Control if authenticated user is in role "Admin" -->
@if (User.IsInRole("Admin"))
{ 
<div class="navbar-title">Site administration</div>
<ul class="main-navigation-menu">
    <li>
        <a href="~/Users/Manage">
            <div class="item-content">
                <div class="item-media">
                    <i class="ti-user"></i>
                </div>
                <div class="item-inner">
                    <span class="title"> Users </span>
                </div>
            </div>
        </a>
    </li>
</ul>
}